doctype html
html(lang="en")
  head
    title Eric's blog
    link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/style.css")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-2
      .container
        a.navbar-brand(href='#') Eric's blog
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExample05', aria-controls='navbarsExample05', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarsExample05.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li.nav-item.active
              a.nav-link(href='/')
                | Home
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='/articles/new') Add Article

          ul.navbar-nav.navbar-right
            //- 如果存在用户信息 cookie，显示 Logout 按钮
            if userinfo
              li.nav-item
                a.nav-link(href='/users/logout') Logout
            //- 如果没有用户信息，表示未登录，显示 Login 和 Register 按钮
            else
              li.nav-item
                a.nav-link(href='/users/login') Login
              li.nav-item
                a.nav-link(href='/users/register') Register   

    .container
      //- 表单验证提示错误信息
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      //- 显示提示信息，message 表示 views 文件夹下面的 message.pug 文件
      != messages('message', locals)
      block content

      br
      br
      br
      hr
    
      footer
        p Copyright &copy; 2018

  script(src="/bower_components/jquery/dist/jquery.min.js")
  script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
  script(src="/js/main.js")